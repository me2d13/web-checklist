{
    "title": "Cessna 172 Normal Procedures",
    "titleStyle": {
        "fontStyle": "italic"
    },
    "columns": 2,
    "defaultStyle": {
        "sequence": {
            "titleStyle": {
                "letterSpacing": "0.15em",
                "fontStyle": "italic"
            },
            "textStyle": {
                "color": "#666666",
                "fontSize": "0.9rem"
            }
        }
    },
    "namedStyles": {
        "engineAction": {
            "color": "#9c27b0",
            "fontWeight": "bold"
        },
        "smallRed": {
            "color": "#d32f2f",
            "fontSize": "0.85rem"
        },
        "subsection": {
            "fontStyle": "italic",
            "fontWeight": "bold",
            "textAlign": "center",
            "marginTop": "1rem",
            "marginBottom": "0rem",
            "textDecoration": "underline"
        }
    },
    "elements": [
        {
            "type": "sequence",
            "title": "Before Starting Engine",
            "style": {
                "backgroundColor": "#e8f5e9"
            },
            "steps": [
                {
                    "item": "Preflight Inspection",
                    "state": "COMPLETE"
                },
                {
                    "item": "Seats, Belts, Harness",
                    "state": "ADJUST & LOCK"
                },
                {
                    "text": "Text step",
                    "textStyle": {
                        "color": "gray",
                        "fontStyle": "italic"
                    }
                },
                {
                    "item": "Fuel Shutoff Valve",
                    "state": "ON"
                },
                {
                    "item": "Brakes",
                    "state": "TEST & SET"
                }
            ]
        },
        {
            "type": "image",
            "src": "examples/cesna-sep.jpg",
            "imageStyle": {
                "maxWidth": "400px",
                "borderRadius": "4px"
            }
        },
        {
            "type": "sequence",
            "title": "Starting Engine",
            "titleStyle": {
                "color": "#d32f2f",
