                    },
                    "stateStyle": {
                        "color": "#1565c0"
                    }
                },
                {
                    "item": "Master Switch",
                    "state": "ON"
                },
                {
                    "item": "Beacon",
                    "state": "ON"
                },
                {
                    "item": "Throttle",
                    "state": "OPEN 1/2 INCH",
                    "itemStyle": "engineAction"
                },
                {
                    "item": "Propeller Area",
                    "state": "CLEAR"
                },
                {
                    "item": "Ignition Switch",
                    "state": "START",
                    "itemStyle": "engineAction"
                }
            ]
        },
        {
            "type": "text",
            "text": "Top level text can be between sections and when it is long it will be wrapped to the next line",
