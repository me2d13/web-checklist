                {
                    "item": "Avionics Master Switch",
                    "state": "ON"
                },
                {
                    "item": "Radios",
                    "state": "ON"
                }
            ]
        },
        {
            "type": "sequence",
            "title": "Before Takeoff",
            "titleStyle": {
                "backgroundColor": "#1565c0",
                "color": "#ffffff",
                "textAlign": "center",
                "marginLeft": "-0.5rem",
                "marginRight": "-0.5rem",
                "paddingLeft": "1rem",
                "paddingRight": "1rem"
            },
            "steps": [
                {
                    "item": "Parking Brake",
                    "state": "SET"
