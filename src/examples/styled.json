                {
                    "item": "Climb Speed",
                    "state": "70-80 KIAS"
                }
            ]
        },
        {
            "type": "sequence",
            "title": "Landing",
            "itemStyle": {
                "color": "#2e7d32",
                "fontStyle": "italic"
            },
            "stateStyle": "smallRed",
            "steps": [
                {
                    "item": "Mixture",
                    "state": "RICH"
                },
                {
                    "item": "Carburetor Heat",
                    "state": "ON"
                },
                {
                    "item": "Airspeed",
                    "state": "65-75 KIAS",
                    "itemStyle": {
                        "color": "#1565c0",
                        "fontWeight": "bold"
                    }
                },
                {
                    "item": "Wing Flaps",
                    "state": "AS DESIRED"
                },
                {
                    "item": "Touchdown",
                    "state": "MAIN WHEELS FIRST"
                },
                {
                    "item": "Brakes",
                    "state": "MINIMUM REQUIRED"
                }
            ]
        }
    ]
}